<% layout('/layouts/boilerplate') -%>

<div class="container mt-5">
    <div class="row">
        
        <form class="col-4 offset-4 needs-validation" novalidate action="http://localhost:8080/login" method="POST">
            <h4 class="text-danger text-center mb-3">Login</h4>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" name="user[username]" class="form-control" id="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="user[password]" class="form-control" id="password" required>
              </div>
            <button type="submit" class="btn btn-success">Login</button>
          </form>
    </div>
</div>